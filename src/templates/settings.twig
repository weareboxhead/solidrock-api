{% import "_includes/forms" as forms %}

{{ forms.textField({
    first: true,
    label: 'Solidrock API URL',
    instructions: 'Enter the Solidrock API URL',
    id: 'apiUrl',
    name: 'apiUrl',
    value: settings.apiUrl
}) }}

{{ forms.textField({
    label: 'Solidrock API Key',
    instructions: 'Enter the API key you have been issued by Solidrock',
    id: 'apiKey',
    name: 'apiKey',
    value: settings.apiKey
}) }}

{{ forms.textField({
    label: 'Solidrock Auth Username',
    instructions: 'Enter the Authentication Username for Solidrock',
    id: 'apiUsername',
    name: 'apiUsername',
    value: settings.apiUsername
}) }}

{{ forms.passwordField({
    label: 'Solidrock Auth Password',
    instructions: 'Enter the Authentication Password for Solidrock',
    id: 'apiPassword',
    name: 'apiPassword',
    value: settings.apiPassword
}) }}